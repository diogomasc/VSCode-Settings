{
  // Configurações Gerais
  "window.zoomLevel": 0.1,
  "symbols.hidesExplorerArrows": false,
  "symbols.files.associations": {
    "*.service.ts": "ts"
  },
  "breadcrumbs.enabled": false,
  "workbench.colorTheme": "GitHub Dark",
  "workbench.iconTheme": "symbols",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "workbench.statusBar.visible": false,
  "explorer.confirmPasteNative": false,
  // Configurações do Editor
  "editor.renderLineHighlight": "gutter",
  "editor.minimap.enabled": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontLigatures": true,
  "editor.fontSize": 14,
  "editor.lineHeight": 1.6,
  "editor.semanticHighlighting.enabled": false,
  "editor.parameterHints.enabled": true,
  "editor.formatOnSave": true,
  "editor.accessibilitySupport": "off",
  "editor.tokenColorCustomizations": {
    "textMateRules": []
  },
  // Configurações da Árvore de Arquivos
  "explorer.compactFolders": false,
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-*, bun.lockb, nest*, package-lock*",
    "tailwind.config.*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*"
  },
  "workbench.tree.indent": 14,
  // Configurações Personalizadas (APC)
  "apc.electron": {
    "titleBarStyle": "hiddenInset",
    "opacity": 1,
    "vibrancy": "dark",
    "frame": false
  },
  "apc.header": {
    "height": 36
  },
  "apc.listRow": {
    "height": 24
  },
  "apc.font.family": "Inter",
  "apc.stylesheet": {
    // ".editor-actions": "display: none", // Desabilita as ações rapida do editor do canto superior direito
    ".pane-header": "padding: 0 8px",
    ".split-view-view:first-child .pane-header": "display: none !important;",
    ".monaco-list-row": "border-radius: 4px;",
    ".monaco-workbench .monaco-list:not(.element-focused):focus:before": "display: none;"
  },
  // Configurações do Terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrainsMono Nerd Font",
  // Configurações do Git
  "git.ignoreMissingGitWarning": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  // Configurações do GitLens
  "gitlens.advanced.messages": {
    "suppressGitMissingWarning": true,
    "suppressLineUncommittedWarning": true
  },
  "gitlens.defaultDateFormat": null,
  "gitlens.defaultTimeFormat": null,
  "gitlens.defaultDateShortFormat": null,
  // Configurações de Formatação
  "files.autoSave": "onWindowChange",
  "editor.defaultFormatter": "biomejs.biome",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  "javascript.updateImportsOnFileMove.enabled": "always",
  // Configurações de Formatação de Linguagens
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // Configurações de Temas da Barra de Tarefas/Ações do VS Code
  "workbench.productIconTheme": "fluent-icons",
  "workbench.layoutControl.enabled": false,
  // Configurações de Segurança
  "security.workspace.trust.untrustedFiles": "open",
  // Configurações de Remoto
  "remote.restoreForwardedPorts": false,
  // Configurações de Live Server
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.donotVerifyTags": true,
  // Configurações de Live Share
  "liveshare.connectionMode": "relay"
}
