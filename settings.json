{
  // Visual do editor
  "workbench.colorTheme": "GitHub Dark",
  "workbench.iconTheme": "symbols",
  "workbench.productIconTheme": "fluent-icons",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.labelFormat": "short",
  "workbench.statusBar.visible": false,
  "workbench.tree.indent": 14,
  // Customização da interface
  "window.titleBarStyle": "custom",
  "window.menuBarVisibility": "visible",
  "window.customMenuBarAltFocus": false,
  "workbench.layoutControl.enabled": false,
  "window.density.editorTabHeight": "compact",
  "workbench.tree.renderIndentGuides": "none",
  "workbench.tree.expandMode": "singleClick",
  // Configurações do editor
  "editor.fontFamily": "JetBrains Mono",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.lineHeight": 20,
  "editor.wordWrap": "on",
  "editor.minimap.enabled": true,
  "editor.renderLineHighlight": "gutter",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "hidden",
  "editor.semanticHighlighting.enabled": false,
  "editor.parameterHints.enabled": true,
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "biomejs.biome",
  "editor.accessibilitySupport": "off",
  "editor.padding.top": 8,
  "editor.padding.bottom": 8,
  "editor.hover.delay": 200,
  // Terminal
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "JetBrains Mono, Fira Code",
  "terminal.integrated.cursorStyle": "line",
  // Explorador de arquivos
  "explorer.compactFolders": false,
  "explorer.sortOrder": "foldersNestsFiles",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "package.json": ".eslint*, prettier*, tsconfig*, vite*, pnpm-*, bun.lockb, nest*, package-lock*",
    "tailwind.config.*": "tailwind.config*, postcss.config*",
    ".env.local": ".env*",
    ".env": ".env*"
  },
  "explorer.confirmPasteNative": false,
  // Símbolos e breadcrumbs
  "symbols.hidesExplorerArrows": false,
  "symbols.files.associations": {
    "*.service.ts": "ts"
  },
  "breadcrumbs.enabled": false,
  // Git
  "git.ignoreMissingGitWarning": true,
  "git.enableSmartCommit": true,
  "git.confirmSync": false,
  "git.autofetch": true,
  // Formatação específica por linguagem
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  // Code Actions
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "always",
    "quickfix.biome": "explicit",
    "source.organizeImports.biome": "explicit"
  },
  // Salvamento automático
  "files.autoSave": "onWindowChange",
  // Customizações adicionais para melhor visual
  "workbench.list.smoothScrolling": true,
  "editor.smoothScrolling": true,
  "editor.cursorBlinking": "phase",
  "editor.cursorSmoothCaretAnimation": "on",
  "workbench.editor.showTabs": "multiple",
  "workbench.editor.tabSizing": "shrink"
}
